 
    <div class='container mt-5'>
        <div class='row justify-content-center'>
            <div class='col-md-8'>
                <div class='card'>
                    <div class='card-header'>
                        <a class="btn btn-primary" href="/" role="button">Voltar</a>  
                    </div>
                        <div class='card-body'> 
                        
                                <form action= "/admin/add" method="POST">
                            
                                    <div class="mb-3">
                                        <label for="nome" class="form-label">Nome</label>
                                        <input type="text" id = "nome" name="nome" class="form-control"  placeholder="Nome.." value="{{nome}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="sobrenome" class="form-label">Sobrenome</label>
                                        <input type="text" id = "sobrenome" name="sobrenome" class="form-control"  placeholder="Sobrenome" value="{{sobrenome}}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="idade" class="form-label">Idade</label>
                                        <input type="text" id = "idade" name="idade" class="form-control"  placeholder="Idade.." value = "{{idade}}">
                                        <!--<input id="password" type="password" class="form-control @error('password') is-invalid @enderror" name="password" required autocomplete="new-password">-->
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" id = "email" name="email" class="form-control" placeholder="Email.." autocomplete="email" value = "{{email}}">
                                    </div>
                                    
                                    <button type='submit' class='btn btn-primary'>Cadastrar</button>

                                </form>
                            
                        </div>
                </div>
            </div>
        </div>
    </div>