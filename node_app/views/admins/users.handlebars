
<div class='container mt-3'>
    <div class='row justify-content-center'>
        <div class='col-md-12'>
            <div class='card'>
              <div class="card-header"><a class="btn btn-primary" href="/admin/cad" role="button"> Novo usuário</a> </div>
                    <div class='card-body'>
                      <h1 class="text-center">Tabela de usuários</h1>
                          
                        <table class="table table-striped table-hover table-bordered ">
                            <thead>
                                <tr>
                                  <th scope="col">Id</th>
                                  <th scope="col">Nome</th>
                                  <th scope="col">Sobrenome</th>
                                  <th scope="col">Idade</th>
                                  <th scope="col">Email</th>
                                  <th scope="col">Editar</th>
                                  <th scope="col">Deletar</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                              
                              {{#each users }}
                              
                                  <tr>
                                    <td class="fw-bold">{{id}}</td>
                                    <td class="text-break">{{nome}}</td>
                                    <td class="text-break">{{sobrenome}}</td>
                                    <td class="text-break">{{idade}}</td>
                                    <td class="text-break">{{email}}</td>
                                    <td class="text-center"> <a class="btn btn-primary" href="/admin/editar/{{id}}" role="button">Editar</a></td>
                                    <td class="text-center">
                                          <form action="/admin/deletar/{{id}}" method="get">
                                          <button class="btn btn-danger">Deletar</button>
                                          </form>
                                    </td>
                                  </tr>
                                  
                             {{/each}}

                            </tbody>
                        </table>
                  </div>
            </div>   
        </div>
    </div>
</div>

<!-- Errors -->

    <div class='container mt-3'>
        <div class='row justify-content-center'>
            <div class='col-md-8'>
                

                    {{#if errors}}
                        <div class="alert alert-danger">
                            <ul>
                            {{#each errors}}
                                <li>{{this.msg}}</li>
                            {{/each}}
                            </ul>
                        </div>
                    {{/if}}
                
            </div>
        </div>
    </div>      
