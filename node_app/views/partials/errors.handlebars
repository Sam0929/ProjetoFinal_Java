<!-- Errors -->

    <div class='container mt-3'>
        <div class='row justify-content-center'>
            <div class='col-md-8'>
                

                    {{#if errors}}
                        <div class="alert alert-danger">
                            <ul>
                            {{#each errors}}
                                <li>{{this.msg}}</li>
                            {{/each}}
                            </ul>
                        </div>
                    {{/if}}
                
            </div>
        </div>
    </div>      